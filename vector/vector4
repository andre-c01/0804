package com.mycompany.ex4;

import java.util.Scanner;

/**
Faça um programa que leia um vetor com dez números inteiros, calcule e mostre a quantidade
* de números negativos e a soma dos números positivos desse vetor.
 */
public class Ex4 {

    public static void main(String[] args) {
        System.out.println("Hello World!");
        
        int numeros[] = new int[10];
        int totalNegativos = 0;
        int totalPositivos = 0;
        int SomaPositivos = 0;
        int SomaNegativos = 0;

        
        Scanner scanner = new Scanner(System.in);
        
        for (int i= 0; i < numeros.length; i++) {
        System.out.println("Introduza o numero para a posição " + i);
        numeros[i] = scanner.nextInt();
            }
        for (int i = 0; i < numeros.length; i++) {
            if (numeros[i] < 0) {
                SomaNegativos  += numeros[i];
                totalNegativos++;
        } else {
                SomaPositivos += numeros[i];
                totalPositivos++;
            }
        }
        System.out.println("Total de negativos:" + totalNegativos);
        System.out.println("Total de negativos:" + totalNegativos);
        System.out.println("Soma de negativos:" + SomaNegativos);
        System.out.println("Soma de positivos:" + SomaPositivos);
    }
}

            
        
        
       
